<doc-page title="大图样式">
  <demo-item>
    <view class="demo-item__code" slot="code">
      <rich-text type="text" nodes="{{ nodes }}">
      </rich-text>
    </view>

    <view>
      <text class="demo-item__subtitle">展示效果：</text>
      <goods
        app-id="{{ mockData.appId }}"
        shop-id="{{ mockData.shopId }}"
        open-id="{{ mockData.openId }}"
        goods-group-id="{{ goodsGroupId }}"
        goods-from="{{ goodsFrom }}"
        goods-ids="{{ goodsIds }}"
        layout="{{ 0 }}"
        extra-data="{{ extraData }}"
        goods-num="{{ 30 }}"
        open-cart
        redirect-type="{{ 1 }}"
        show-sub-title="{{ false }}"
        bind:buy="handleBuy"
        bind:item-click="handleItemClick"
      />
    </view>
  </demo-item>
</doc-page>
